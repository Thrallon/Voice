<Page
    x:Class="J.A.R.V.I.S.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:J.A.R.V.I.S"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <Image x:Name="image"   Source="Assets/jarvis.jpg"  Grid.Row="0" Grid.RowSpan="2"  Stretch="Fill" />
        <MediaElement Name="mediaElement" Margin="10,406.667,349,19" Grid.Row="2"></MediaElement>
        <Button x:Name="button1" Content="Interact with J.A.R.V.I.S" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="60" Click="interact" BorderThickness="0" BorderBrush="Lime" Foreground="#FF080808" FontSize="20" FontStyle="Italic" FontWeight="Medium" Background="#FF1DFF00"/>
        <Button x:Name="button2" Content="Let J.A.R.V.I.S send an Email " Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="60" Click="email" BorderThickness="0" Background="#FFE68B1D" FontWeight="Medium" FontStyle="Italic" FontSize="20"/>
       
        


    </Grid>
</Page>
